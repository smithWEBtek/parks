<h2>Parks</h2>

<%= will_paginate @parks %>

<div id='result'>my choice</div>

<h3>Search</h3>
<%= form_tag parks_path, method: :get do %>
  <%= select_tag(
    "state",
    options_from_collection_for_select(
      @states,
      "abbreviation",
      "abbreviation",
      @selected
    ),
		include_blank: "All", 
		id: "state_select"
  ) %>
  <%= submit_tag "Search" %>
<% end %>



<% @parks.each do |park| %>
  <div id="<%= park.api_id %>">
    <h3>
      <%= park.full_name %> - <%= park.states.map(&:abbreviation).join(", ") %>
    </h3>
    <%= link_to "View Park", park_path(park.id) %>
  </div>
<% end %>

<%= will_paginate @parks %>
